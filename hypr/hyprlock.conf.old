general {
    no_fade_in = false
    grace = 0
    disable_loading_bar = true
}

background {
    monitor =
    path = /home/lakshaya/Downloads/yamamoto.jpg   # Your Wallpaper
    color = rgba(25, 20, 20, 1.0)
    blur_passes = 4 # 0 disables blurring
    blur_size = 8
    noise = 0.0117
    contrast = 0.8916
    brightness = 0.8172
    vibrancy = 0.1696
    vibrancy_darkness = 0.0
}

# TIME
label {
    monitor =
    text = cmd[update:1000] echo "$(date +"%-I:%M %p")"
    color = rgba(255, 255, 255, 0.6)
    font_size = 120
    font_family = JetBrains Mono Nerd Font ExtraBold
    position = 0, -300
    halign = center
    valign = top
}

# USER
label {
    monitor =
    text = Hi there, $USER
    color = rgba(255, 255, 255, 0.9)
    font_size = 22
    font_family = JetBrains Mono Nerd Font
    position = 0, -40
    halign = center
    valign = center
}

# INPUT FIELD
input-field {
    monitor =
    size = 280, 40
    outline_thickness = 3
    
    # Border & Background
    outer_color = rgba(255, 255, 255, 0.15) rgba(255, 255, 255, 0.05) 45deg
    inner_color = rgba(0, 0, 0, 0.4) # Darker glass feel
    check_color = rgba(137, 180, 250, 0.8) # Soft blue when checking
    fail_color = rgba(243, 139, 168, 0.8)  # Soft red on failure
    
    # Text & Dots
    font_color = rgb(240, 240, 240)
    fade_on_empty = true
    font_family = JetBrainsMono Nerd Font
    placeholder_text = <span foreground="##ffffff88"><i>Enter Your Password</i></span>
    
    # Shape & Animations
    rounding = 75 # High rounding for a "pill" shape
    dots_size = 0.25 
    dots_spacing = 0.35 
    dots_center = true
        
    position = 0, -140
    halign = center
    valign = center
}
